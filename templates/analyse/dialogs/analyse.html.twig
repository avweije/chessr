<div id="analyseModal" class="modal is-large-rounded">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Analysing your games</p>
			<button id="analyseModalCloseButton" class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<div id="analyseModalFields">
				<table>
					<tr>
						<td>
							<label class="has-text-faded whitespace-nowrap">Status:</label>
						</td>
						<td>
							<p class="w-full tc-base"></p>
						</td>
					</tr>
					<tr>
						<td>
							<label class="has-text-faded whitespace-nowrap">Game:</label>
						</td>
						<td>
							<p class="w-full tc-base"></p>
						</td>
					</tr>
					<tr>
						<td>
							<label class="has-text-faded whitespace-nowrap">Period:</label>
						</td>
						<td>
							<p class="w-full tc-base"></p>
						</td>
					</tr>
					<tr>
						<td>
							<label class="has-text-faded whitespace-nowrap">Mistakes:</label>
						</td>
						<td>
							<p class="w-full tc-base"></p>
						</td>
					</tr>
					<tr>
						<td>
							<label class="has-text-faded whitespace-nowrap">Elapsed time:</label>
						</td>
						<td>
							<p class="w-full tc-base"></p>
						</td>
					</tr>
				</table>
			</div>
			<div id="analyseModalError" class="is-hidden pb-4">
				<p class="w-full text-lg tc-base"></p>
			</div>
		</section>
		<footer class="modal-card-foot is-justify-content-flex-end">
			<div class="buttons">
				<button id="analyseModalStopButton" class="button is-warning">Stop analysing</button>
			</div>
		</footer>
	</div>
</div>
