{% use 'form_div_layout.html.twig' %}

{# Widgets #}

{% block form_start -%}
	{{- parent() -}}
	<div class="mt-10 grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-6">
	{% endblock form_start %}

	{% block form_end -%}
	</div>
	{{- parent() -}}
{% endblock form_end %}

{% block form_row -%}
	{%- set row_attr = row_attr|merge({class: (row_attr.class|default('') ~ ' col-span-full')|trim}) -%}
	{{- parent() -}}
{% endblock form_row %}

{% block form_label -%}
	{%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' block text-sm mb-1 font-medium leading-6 text-gray-900 dark:text-gray-300')|trim}) -%}
	{{- parent() -}}
{% endblock form_label %}


{% block form_widget_simple -%}
	{% if type is not defined or type not in ['file', 'hidden'] %}
		{%- set attr = attr|merge({class: (attr.class|default('') ~ ' input-text')|trim}) -%}
	{% endif %}
	{{- parent() -}}
{% endblock form_widget_simple %}
