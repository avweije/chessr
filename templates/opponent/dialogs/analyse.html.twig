<div id="analyseModal" class="modal is-large-rounded">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Analysing your opponent's games</p>
			<button id="analyseModalCloseButton" class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<div id="analyseModalFields" class="grid-auto-1fr is-gap-1">
				<label class="has-text-faded whitespace-nowrap">Type:</label>
				<p></p>
				<label class="has-text-faded whitespace-nowrap">Status:</label>
				<p></p>
				<label class="has-text-faded whitespace-nowrap">Matches:</label>
				<p></p>
				<label class="has-text-faded whitespace-nowrap">Period:</label>
				<p></p>
				<label class="has-text-faded whitespace-nowrap">Elapsed time:</label>
				<p></p>
			</div>

			<div id="analyseModalError" class="is-hidden pb-4">
				<p class="w-full"></p>
			</div>
		</section>
		<footer class="modal-card-foot is-justify-content-flex-end">
			<div class="buttons">
				<button id="analyseModalStopButton" class="button is-warning">
					Stop analysing
				</button>
			</div>
		</footer>
	</div>
</div>
