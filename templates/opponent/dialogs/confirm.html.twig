<div id="confirmModal" data-element="yes" class="modal is-large-rounded">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Please confirm</p>
			<button id="confirmModalCloseButton" data-element="yes" class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<p class="w-full">Are you sure you want to remove this opponent?</p>
			<p class="w-full my-4">All their games will be removed also.</p>
		</section>
		<footer class="modal-card-foot is-justify-content-flex-end">
			<div class="buttons">
				<button id="confirmModalCancelButton" data-element="yes" class="button">
					Cancel
				</button>
				<button id="confirmModalConfirmButton" data-element="yes" class="button is-warning">
					Confirm
				</button>
			</div>
		</footer>
	</div>
</div>
