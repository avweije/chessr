<div id="disconnectModal" class="modal is-large-rounded">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Disconnect from main account</p>
			<button id="disconnectModalCloseButton" class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<p class="w-full tc-base my-6">
				Uncheck the account(s) you want to disconnect from
				<span id="disconnectModalOpponentUsername" class="has-text-weight-semibold">Opponent</span>:
			</p>

			<div id="disconnectModalChildAccountContainer" class="columns is-multiline is-gapless">
				<!-- Each checkbox item wrapped in a column pair -->
				<div class="column is-narrow">
					<label class="checkbox">
						<input type="checkbox" value="">
						Account 1
					</label>
				</div>
				<div class="column">
					<!-- optional description or extra info for this account -->
				</div>
				<!-- Repeat for other accounts -->
			</div>
		</section>
		<footer class="modal-card-foot is-justify-content-flex-end">
			<div class="buttons">
				<button id="disconnectModalCancelButton" class="button">
					Cancel
				</button>
				<button id="disconnectModalConfirmButton" class="button is-warning">
					Confirm
				</button>
			</div>
		</footer>
	</div>
</div>
