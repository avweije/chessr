{% extends 'board.html.twig' %}

{% block board_header %}
	<div id="practiceRepertoireButtons" class="inline-flex rounded-md shadow-sm">
		<button disabled class="text-gray-900 disabled:text-gray-300 bg-white px-4 py-2 text-sm font-medium border border-gray-200 rounded-s-lg hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:text-primary-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:text-white">
			White
		</button>
		<button disabled class="text-gray-900 disabled:text-gray-300 bg-white px-4 py-2 text-sm font-medium border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:text-primary-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:text-white">
			Black
		</button>
		<button disabled class="text-gray-900 disabled:text-gray-300 bg-white px-4 py-2 text-sm font-medium border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:text-primary-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:text-white">
			New
			<sup class="font-normal pl-px"></sup>
		</button>
		<button disabled class="text-gray-900 disabled:text-gray-300 bg-white px-4 py-2 text-sm font-medium border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:text-primary-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:text-white">
			Recommended
			<sup class="font-normal pl-px"></sup>
		</button>
		<button disabled class="text-gray-900 disabled:text-gray-300 bg-white px-4 py-2 text-sm font-medium border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:text-primary-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:text-white">
			All
		</button>
		<button disabled class="text-gray-900 disabled:text-gray-300 bg-white px-4 py-2 text-sm font-medium border border-gray-200 rounded-e-lg hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:text-primary-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:text-white">
			Analysis
			<sup class="font-normal pl-px"></sup>
		</button>
	</div>
{% endblock %}

{% block board_top %}
	<button type="button" id="startPracticeButton" disabled class="btn btn-primary">
		Start your practice
	</button>
	<button type="button" id="giveHintButton" disabled class="hidden btn btn-primary mr-1">
		Hint
	</button>
	<button type="button" id="skipMoveButton" disabled class="hidden btn btn-primary">
		Skip this move
	</button>
{% endblock %}

{% block board_left %}
	<div id="board" class="border border-slate-300" data-type="{{ repertoireType }}"></div>
{% endblock %}

{% block board_right %}
	<div class="border rounded border-slate-300 text-sm bg-white">
		<div class="flex justify-between items-center">
			<p class="block text-sm font-bold text-gray-900 p-3 border-b border-slate-200">Practice</p>
			<div id="practiceCountersContainer" class="hidden flex items-center m-1.5">
				<div class="flex items-center bg-indigo-500 rounded-md">
					<div class="flex items-center justify-center bg-white text-indigo-500 rounded-full w-5 h-5 m-1.5">
						<span class="icon-[mdi--chess-queen]"></span>
					</div>
					<div id="practiceMoveCounter" class="text-sm text-center font-semibold text-white ml-0.5 mr-3">128</div>
				</div>
				<div class="flex items-center bg-secondary-500 rounded-md mx-1">
					<div class="flex items-center justify-center bg-white text-secondary-500 rounded-full w-5 h-5 m-1.5">
						<span class="icon-[mdi--check-bold]"></span>
					</div>
					<div id="practiceCorrectCounter" class="text-sm text-center font-semibold text-white ml-0.5 mr-3">89</div>
				</div>
				<div class="flex items-center bg-red-500 rounded-md">
					<div class="flex items-center justify-center bg-white text-red-500 rounded-full w-5 h-5 m-1.5">
						<span class="icon-[mdi--cancel-bold]"></span>
					</div>
					<div id="practiceFailedCounter" class="text-sm text-center font-semibold text-white ml-0.5 mr-3">14</div>
				</div>
			</div>
		</div>
	</div>

	<div class="my-1 border rounded border-slate-300">
		<div id="infoContainer" class="flex items-center p-3 bg-primary-100 text-primary-700 border-l-4 border-l-primary-400" role="alert">
			<span class="text-primary-600 w-7 h-7 icon-[mdi--information-slab-circle-outline]"></span>
			<span class="text-base font-medium px-3 block sm:inline">To start your practice, click the button above.</span>
		</div>
		<div id="confirmContainer" class="hidden flex items-center p-3 bg-secondary-100 text-secondary-700 border-l-4 border-l-secondary-400" role="alert">
			<span class="text-secondary-600 w-7 h-7 icon-[mdi--check-circle-outline]"></span>
			<span class="text-base font-medium px-3 block sm:inline"></span>
		</div>
		<div id="warningContainer" class="hidden flex items-center p-3 bg-red-100 text-red-700 border-l-4 border-l-red-400" role="alert">
			<span class="text-red-600 w-7 h-7 icon-[mdi--error-outline]"></span>
			<span class="text-base font-medium px-3 block sm:inline"></span>
		</div>
	</div>

	<div id="playedMovesContainer" class="hidden border rounded border-slate-300 text-sm bg-white">
		<p class="block text-sm font-bold text-gray-900 p-3 border-b border-slate-200">Moves</p>
		<div id="playedMovesList" class="p-2 text-sm bg-white">
			<div class="text-base border-b border-slate-200 p-2">1. _</div>
			<div class="text-base p-2">1. _</div>
		</div>
	</div>

	<div id="analysisGameContainer" class="hidden">
		<div class="border rounded border-slate-300 text-sm bg-white">
			<p class="block text-sm font-bold text-gray-900 p-3 border-b border-slate-200">Game</p>
			<div id="analysisGameFields" class="grid grid-cols-[_auto_1fr] p-2">
				<label class="p-2 text-sm font-semibold text-gray-700 whitespace-nowrap">Opponent:</label>
				<p class="p-2 text-sm w-full truncate font-semibold text-gray-700"></p>
				<label class="p-2 text-sm font-semibold text-gray-700 whitespace-nowrap">Move:</label>
				<p class="p-2 text-sm w-full truncate font-semibold text-gray-700"></p>
				<label class="p-2 text-sm font-semibold text-gray-700 whitespace-nowrap">Start position:</label>
				<p class="p-2 text-sm w-full truncate font-semibold text-gray-700"></p>
				<label class="p-2 text-sm font-semibold text-gray-700 whitespace-nowrap">Link:</label>
				<a href="#" target="_blank" class="p-2 text-sm w-full truncate font-semibold text-gray-700 hover:text-gray-400"></a>
			</div>
		</div>

		<div class="flex justify-end mt-2">
			<button type="button" id="analysisSaveButton" disabled class="btn btn-primary" title="Save this move to your repertoire and discard it.">
				Save to repertoire
			</button>
			<button type="button" id="analysisIgnoreButton" disabled class="btn btn-primary mx-1" title="This move will be ignored in future analysis.">
				Not a mistake
			</button>
			<button type="button" id="analysisDiscardButton" disabled class="btn btn-primary" title="Delete this move from the analysis lines.">
				Discard
			</button>
		</div>
	</div>

{% endblock %}

{% block body_end %}
	{{ include('practice/dialogs/save.html.twig') }}
	{{ include('practice/dialogs/ignore.html.twig') }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	{{ encore_entry_link_tags('modal') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	{{ encore_entry_script_tags('practice') }}
{% endblock %}
