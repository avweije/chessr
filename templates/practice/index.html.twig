{% extends 'board.html.twig' %}

{% block board_header %}
	<div id="practiceRepertoireButtons" class="boxed-radio-menu">
		<div class="boxed-radio">
			<input class="is-hidden" type="radio" name="repertoire_type" value="white" id="repertoireWhite"/>
			<label class="boxed-radio-label" for="repertoireWhite"></label>
			<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">White</span>
		</div>
		<div class="boxed-radio">
			<input class="is-hidden" type="radio" name="repertoire_type" value="black" id="repertoireBlack"/>
			<label class="boxed-radio-label" for="repertoireBlack"></label>
			<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Black</span>
		</div>
		<div class="boxed-radio is-hidden">
			<input class="is-hidden" type="radio" name="repertoire_type" value="new" id="repertoireNew"/>
			<label class="boxed-radio-label" for="repertoireNew"></label>
			<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">New
				<sup class="font-normal pl-px"></sup>
			</span>
		</div>
		<div class="boxed-radio is-hidden">
			<input class="is-hidden" type="radio" name="repertoire_type" value="recommended" id="repertoireRecommended"/>
			<label class="boxed-radio-label" for="repertoireRecommended"></label>
			<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Recommended
				<sup class="font-normal pl-px"></sup>
			</span>
		</div>
		<div class="boxed-radio">
			<input class="is-hidden" type="radio" name="repertoire_type" value="all" id="repertoireAll" checked/>
			<label class="boxed-radio-label" for="repertoireAll"></label>
			<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">All</span>
		</div>
		<div class="boxed-radio">
			<input class="is-hidden" type="radio" name="repertoire_type" value="analysis" id="repertoireAnalysis"/>
			<label class="boxed-radio-label" for="repertoireAnalysis"></label>
			<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Analysis
				<sup class="font-normal pl-px"></sup>
			</span>
		</div>
	</div>

	<div id="practiceCustomRepertoireField" class="is-hidden boxed-radio-menu">
		<div class="boxed-radio">
			<span class="px-2"></span>
		</div>
	</div>
{% endblock %}

{% block board_top %}
	<div class="is-flex is-justify-content-space-between is-align-items-center mt-0 mb-2">
		<div id="practiceGroupContainer" class="is-hidden is-flex is-align-items-center" style="max-width: 75vh;">
			<span class="is-size-6 pr-2">Group:</span>
			<div class="select">
				<select id="practiceGroupSelect">
					<option>No groups available</option>
				</select>
			</div>
		</div>
		<div></div>
		<div id="practiceCountersContainer" class="is-hidden is-flex is-align-self-flex-end is-align-items-center pt-3">
			<div class="tag is-primary mr-1">
				<div class="icon">
					<i class="fa-solid fa-chess-queen"></i>
				</div>
				<span id="practiceMoveCounter"></span>
			</div>
			<div class="tag is-success mr-1">
				<div class="icon">
					<i class="fa-solid fa-check"></i>
				</div>
				<span id="practiceCorrectCounter"></span>
			</div>
			<div class="tag is-danger">
				<div class="icon">
					<i class="fa-solid fa-xmark"></i>
				</div>
				<span id="practiceFailedCounter"></span>
			</div>
		</div>
	</div>
{% endblock %}

{% block board_left %}
	<div id="board" class="" data-type="{{ repertoireType }}" data-id="{{ repertoireId }}"></div>
{% endblock %}

{% block board_right %}
	<div id="infoContainer" class="message is-info mb-1">
		<div class="message-body" role="alert">
			<span></span>
			<span class="has-text-weight-medium px-3 block">To start your practice, click the button below.</span>
		</div>
	</div>
	<div id="confirmContainer" class="is-hidden message is-success mb-1">
		<div class="message-body" role="alert">
			<span class="text-secondary-500 ">
				<i class="fa-solid fa-circle-check"></i>
			</span>
			<span class="has-text-weight-medium px-3"></span>
		</div>
	</div>
	<div id="warningContainer" class="is-hidden message is-danger mb-0">
		<div class="message-body" role="alert">
			<span class="is-danger is-flex-shrink-0">
				<i class="fa-solid fa-triangle-exclamation"></i>
			</span>
			<span class="has-text-weight-medium px-3"></span>
		</div>
	</div>
	<div id="hintContainer" class="is-hidden message is-warning mb-0">
		<div class="message-body" role="alert">
			<span class="is-primary is-flex-shrink-0">
				<i class="fa-solid fa-circle-info"></i>
			</span>
			<span class="has-text-weight-medium px-3"></span>
		</div>
	</div>

	<div class="is-flex is-justify-content-flex-end my-2">
		<button type="button" id="startPracticeButton" disabled class="button is-primary">
			Start your practice
		</button>
		<button type="button" id="giveHintButton" title="Hint" disabled class="is-hidden button is-primary mr-1">
			<icon>
				<i class="fa-solid fa-lightbulb"></i>
			</icon>
		</button>
		<button type="button" id="prevMoveButton" title="Previous move" disabled class="is-hidden button is-primary mr-1">
			<i class="fa-solid fa-backward-step"></i>
		</button>
		<button type="button" id="skipMoveButton" title="Skip this move" disabled class="is-hidden button is-primary mr-1">
			<i class="fa-solid fa-forward-step"></i>
		</button>
		<div class="flex">
			<input type="checkbox" id="showPracticeInfoButton" value="1" class="is-hidden">
			<label for="showPracticeInfoButton" title="Toggle info" class="is-hidden select-none button is-primary mr-1 peer-checked:btn-checked">
				<i class="fa-solid fa-circle-info"></i>
			</label>
		</div>
		<div id="analysisGameButtons" class="is-hidden is-flex">
			<button type="button" id="analysisSaveButton" title="Save to repertoire" disabled class="button is-primary">
				<i class="fa-solid fa-floppy-disk"></i>
			</button>
			<button type="button" id="analysisIgnoreButton" title="Not a mistake" disabled class="button is-primary mx-1">
				<i class="fa-solid fa-ban"></i>
			</button>
			<button type="button" id="analysisDiscardButton" title="Discard" disabled class="button is-primary">
				<i class="fa-solid fa-trash"></i>
			</button>
		</div>
	</div>

	<div id="playedMovesContainer" class="is-hidden box p-0">
		<p class="box-header">Moves</p>
		<div id="playedMovesList" class="p-2">
			<div class="border-b border-tacao-200 dark:border-slate-900 p-2">1. _</div>
			<div class="p-2">1. _</div>
		</div>
	</div>

	<div id="pgnContainer" class="is-hidden box p-0">
		<div class="box-header">
			<p class="has-text-weight-bold">PGN</p>
			<div id="pgnNavigationContainer" class="is-flex is-align-items-center px-3">
				<button class="w-6 h-6 tc-link-shade">
					<span class="icon">
						<i class="fa-solid fa-backward-step"></i>
					</span>
				</button>
				<button class="w-6 h-6 tc-link-shade">
					<span class="icon">
						<i class="fa-solid fa-backward"></i>
					</span>
				</button>
				<button class="w-6 h-6 tc-link-shade">
					<span class="icon">
						<i class="fa-solid fa-forward"></i>
					</span>
				</button>
				<button class="w-6 h-6 tc-link-shade">
					<span class="icon">
						<i class="fa-solid fa-forward-step"></i>
					</span>
				</button>
			</div>
		</div>
		<div id="pgnField" class="p-3 text-sm"></div>
	</div>

	<div id="suggestionContainer" class="is-hidden box p-0">
		<p class="box-header">Suggestion</p>
		<div class="is-flex is-align-items-center p-2">
			<div id="suggestionField" class="p-2 inline-block tc-base"></div>
			<button id="suggestionSubmitButton" type="button" class="button is-primary is-light is-small tc-link-shade">
				<span class="icon">
					<i class="fa-solid fa-up-right-from-square"></i>
				</span>
			</button>
		</div>
	</div>

	<form id="repertoireForm" method="post" target="_blank" action="./repertoire"></form>

	<div id="analysisGameContainer" class="is-hidden box p-0">
			<p class="box-header">Game</p>
			<div id="analysisGameFields" class="grid grid-cols-[_auto_1fr] is-align-items-center p-2">
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">Opponent:</label>
				<p class="p-2 is-size-6 w-full truncate tc-base"></p>
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">Move:</label>
				<p class="p-2 is-size-6 w-full truncate tc-base"></p>
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">FEN:</label>
				<p class="p-2 is-size-6 w-full truncate tc-base"></p>
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">Link:</label>
				<a href="#" target="_blank" class="p-2 is-size-6 w-full truncate"></a>
			</div>
	</div>

	<div id="practiceInfoContainer" class="is-hidden">
		<div class="box p-0">
			<div class="box-header">
				<p class="title m-0 is-size-6 ">Info</p>
					<button type="button" title="Open in repertoire" class="button is-primary is-light is-small" id="practiceInfoOpenInRepertoireButton">
						<span class="icon">
							<i class="fa-solid fa-up-right-from-square"></i>
						</span>
					</button>
			</div>
			<div id="practiceInfoFields" class="grid-2-cols is-align-items-center p-2">
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">ECO:</label>
				<p class="p-2 is-ellipsis"></p>
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">PGN:</label>
				<p class="p-2 is-ellipsis"></p>
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">FEN:</label>
				<p class="p-2 is-ellipsis"></p>
				<label class="p-2 is-size-7 has-text-weight-semibold has-text-faded">Stats:</label>
				<p class="p-2 is-ellipsis"></p>
			</div>
		</div>

		<div class="is-flex is-justify-content-flex-end mt-2">
			<button type="button" id="analyseGameButton" class="button is-primary">
				Analyse on Lichess
			</button>
		</div>
	</div>

{% endblock %}

{% block body_end %}
	{{ include('practice/dialogs/save.html.twig') }}
	{{ include('practice/dialogs/ignore.html.twig') }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	<link rel="stylesheet" href="{{ asset('styles/modal.css') }}">
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script>
		const workerUrl = "{{ asset('js/workers/practice01.js') }}";
	</script>
	<script type="module" src="{{ asset('js/practice.js') }}">
{% endblock %}
