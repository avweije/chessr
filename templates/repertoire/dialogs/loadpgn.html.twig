<dialog id="loadPgnModal" class="relative p-6 bg-white dark:bg-slate-800 rounded-lg shadow-lg">
	<button id="loadPgnModalCloseButton" class="close-button outline-none">
		<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300" fill="none" viewbox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
		</svg>
	</button>
	<h2 class="mb-6 mr-32 text-lg font-semibold dark:text-gray-200">Load PGN</h2>

	<textarea id="loadPgnModalPgnTextArea" placeholder="Paste your PGN here..." rows="8" cols="50" class="block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm"></textarea>

	<div class="flex justify-end space-x-2 mt-8">
		<button id="loadPgnModalCancelButton" class="btn btn-outline">
			Cancel
		</button>
		<button id="loadPgnModalConfirmButton" class="btn btn-warning">
			Load PGN
		</button>
	</div>
</dialog>
