{% extends "./base.html.twig" %}

{% block body %}
	<div class="flex justify-around p-4">
		<div id="settingsTabButtons" class="boxed-radio-menu">
			<div class="boxed-radio">
				<input class="peer hidden" type="radio" name="settings_tab" value="engine" id="settingsAccountRadio" checked/>
				<label class="boxed-radio-label" for="settingsAccountRadio"></label>
				<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Account</span>
			</div>
			<div class="boxed-radio">
				<input class="peer hidden" type="radio" name="settings_tab" value="board" id="settingsBoardRadio"/>
				<label class="boxed-radio-label" for="settingsBoardRadio"></label>
				<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Board</span>
			</div>
			<div class="boxed-radio">
				<input class="peer hidden" type="radio" name="settings_tab" value="engine" id="settingsEngineRadio"/>
				<label class="boxed-radio-label" for="settingsEngineRadio"></label>
				<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Engine</span>
			</div>
			<div class="boxed-radio">
				<input class="peer hidden" type="radio" name="settings_tab" value="engine" id="settingsPracticeRadio"/>
				<label class="boxed-radio-label" for="settingsPracticeRadio"></label>
				<span class="boxed-radio-text peer-disabled:text-gray-300 peer-disabled:dark:text-gray-500">Practice</span>
			</div>
		</div>
	</div>

	<div class="flex justify-around mt-12">
		<div id="settingsTabAccount" class="md:w-4/5 lg:w-3/5">
			<div>
				<label class="block mb-1 text-sm font-medium tc-sharp">Email address</label>
				<div class="flex items-center">
					<input id="accountEmailAddress" disabled type="email" value="" class="input-text-faded">
					<div class="w-8 ml-2">
						<button id="unlockEmailAddressButton" class="tc-link-shade btn-icon-hover">
							<span class="w-7 h-7 icon-[mdi--lock]"></span>
							<span class="w-7 h-7 icon-[mdi--lock-open]"></span>
						</button>
					</div>
				</div>
				<div id="accountConfirmContainer" class="transition-opacity opacity-0">
					<label class="block mt-5 mb-1 text-sm font-medium tc-sharp">Please confirm</label>
					<p class="text-base tc-base mb-5 p-1">Your new email address needs to be verified. Click on the link below to send a verification email and follow the instructions to confirm your changes.</p>
					<button id="sendVerificationEmailButton" type="button" class="btn btn-primary">Send the verification email</button>
				</div>
			</div>
		</div>

		<div id="settingsTabBoard" class="hidden flex flex-col gap-y-5 md:gap-y-0 md:gap-x-5 md:flex-row items-start md:justify-between md:w-4/5 lg:w-3/5">
			<div>
				<div id="boardSettingsContainer" class="flex items-center mb-5">
					<div class="mr-2">
						<label class="block mb-1 text-sm font-medium tc-base">Theme</label>
						<div class="input-select">
							<select id="boardThemeSelect">
								<option value="chess-club">Chess Club</option>
								<option value="green">Green</option>
								<option value="blue">Blue</option>
							</select>
							<div class="input-select-caret">
								<svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
							</div>
						</div>
					</div>
					<div class="m2-2">
						<label class="block mb-1 text-sm font-medium tc-base">Pieces</label>
						<div class="input-select">
							<select id="boardPiecesSelect">
								<option value="standard.svg">Standard</option>
								<option value="companion.svg">Companion</option>
								<option value="gioco.svg">Gioco</option>
								<!--<option value="horsey.svg">Horsey</option>-->
								<option value="kiwen-suwi.svg">Kiwen-Suwi</option>
								<option value="monarchy.svg">Monarchy</option>
								<option value="staunty.svg">Staunty</option>
								<option value="tatiana.svg">Tatiana</option>
							</select>
							<div class="input-select-caret">
								<svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
							</div>
						</div>
					</div>
				</div>

				<div id="animationSettingsContainer" class="flex items-center">
					<div class="mr-2">
						<label class="block mb-2 text-sm font-medium tc-base">Animation Duration</label>
						<div class="relative pb-5">
							<div class="absolute left-0 right-0 bottom-0 flex justify-between">
								<span class="text-xs tc-base">0ms</span>
								<span class="text-xs tc-base">500ms</span>
							</div>
							<input id="animationDurationInput" type="range" min="0" max="500" step="50" value="300" class="w-48 h-3 bg-gray-300 dark:bg-gray-400 border border-gray-400 dark:border-gray-500 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:bg-tacao-500 [&::-webkit-slider-thumb]:dark:bg-marigold-600">
						</div>
					</div>
				</div>
			</div>

			<div class="flex">
				<div id="board" style="width: 50vh; max-width: 35vw;"></div>
			</div>
		</div>

		<div id="settingsTabEngine" class="hidden md:w-4/5 lg:w-3/5">
			<div id="animationSettingsContainer" class="flex flex-col items-start">
				<div class="mb-8">
					<label class="block mb-1 text-sm font-medium tc-sharp">Maximum Search Time</label>
					<p class="text-base tc-base p-1 mb-2">The maximum amount of time the engine can search a position when being used in the repertoire.</p>
					<div class="relative inline-block pb-5">
						<div class="absolute left-0 right-0 bottom-0 flex justify-between">
							<span class="text-xs tc-faded">10s</span>
							<span class="text-xs tc-faded">2m</span>
						</div>
						<input id="repertoireEngineTimeInput" type="range" min="10" max="120" step="10" value="30" class="w-48 h-3 bg-gray-300 dark:bg-gray-400 border border-gray-400 dark:border-gray-500 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:bg-tacao-500 [&::-webkit-slider-thumb]:dark:bg-marigold-600">
					</div>
				</div>
				<div class="mb-8">
					<label class="block mb-1 text-sm font-medium tc-sharp">Search Time / Move</label>
					<p class="text-base tc-base p-1 mb-2">The amount of time the engine will use for each move that needs to be evaluated when analysing your games.</p>
					<div class="relative inline-block pb-5">
						<div class="absolute left-0 right-0 bottom-0 flex justify-between">
							<span class="text-xs tc-faded">500ms</span>
							<span class="text-xs tc-faded">5s</span>
						</div>
						<input id="analyseEngineTimeInput" type="range" min="500" max="5000" step="500" value="1000" class="w-48 h-3 bg-gray-300 dark:bg-gray-400 border border-gray-400 dark:border-gray-500 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:bg-tacao-500 [&::-webkit-slider-thumb]:dark:bg-marigold-600">
					</div>
				</div>
				<div>
					<label class="block mb-1 text-sm font-medium tc-sharp">Mistakes</label>
					<p class="text-base tc-base p-1 mb-2">When analysing your games, you can choose to ignore the inaccuracies. Only mistakes and blunders will be added to your analysis practice run.</p>
					<label class="input-toggle">
						<input id="analyseIgnoreInaccuracyCheckbox" type="checkbox" name="animate_complete" value="1" class="sr-only peer">
						<div class="input-toggle-switch"></div>
						<div class="ml-3">
							<p class="text-sm font-normal tc-base">Ignore inaccuracies during analysis.</p>
							<p class="text-xs tc-faded">Only count mistakes and blunders.</p>
						</div>
					</label>
				</div>
			</div>
		</div>

		<div id="settingsTabPractice" class="hidden md:w-4/5 lg:w-3/5">
			<div id="variationSettingsContainer" class="flex flex-col items-start">
				<div class="mb-8">
					<label class="block mb-1 text-sm font-medium tc-sharp">Recommend Moves</label>
					<p class="text-base tc-base p-1 mb-2">The amount of moves that will be recommended based on accuracy and the last time you practiced a move.</p>
					<div class="relative inline-block pb-5">
						<div class="absolute left-0 right-0 bottom-0 flex justify-between">
							<span class="text-xs tc-faded">Less</span>
							<span class="text-xs tc-faded">More</span>
						</div>
						<input id="recommendIntervalInput" type="range" min="0" max="3" step="1" value="0" class="w-48 h-3 bg-gray-300 dark:bg-gray-400 border border-gray-400 dark:border-gray-500 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:bg-tacao-500 [&::-webkit-slider-thumb]:dark:bg-marigold-600">
					</div>
				</div>
				<div>
					<label class="block mb-1 text-sm font-medium tc-sharp">Animate Variations</label>
					<p class="text-base tc-base p-1 mb-2">Each line is animated from the beginning of that line. Any variations that follow can be animated from the start of the variation or from the beginning of the line.</p>
					<label class="input-toggle">
						<input id="animateVariationCheckbox" type="checkbox" value="1" class="sr-only peer">
						<div class="input-toggle-switch"></div>
						<div class="ml-3">
							<p class="text-sm font-normal tc-base">Animate from the beginning of the line.</p>
							<p class="text-xs tc-faded">Instead of from the start of the variation.</p>
						</div>
					</label>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}{% block stylesheets %}
{{ parent() }}

{{ encore_entry_link_tags('chessboard') }}
{{ encore_entry_link_tags('markers') }}{% endblock %}{% block javascripts %}
{{ parent() }}

{{ encore_entry_script_tags('settings') }}{% endblock %}
